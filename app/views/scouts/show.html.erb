<%= render 'shared/header' %>

<div class="new-rec-button">
  <%= link_to '投稿', new_scout_path, class: "new-rec-button-text"%>
</div>

<div class="container">
  <div class="show-main">

    <h1 class="show-title">SCOUT</h1>

    <div class="show-item">
      <p class="label-text">TITLE:</p>
      <h3><%= @scout.scout_title %></h3>
    </div>

    <div class="show-item">
      <p class="label-text">NAME:</p>
      <%= link_to @scout.scout_game_id, user_path(@scout.user_id) %>
    </div>

    <div class="show-item show-about-bg">
      <p class="label-text">DESCRIPTION:</p>
      <%= @scout.scout_text %>
    </div>

  </div>

    <div class="show-buttons">
      <% if current_user == @scout.user %>
        <%= link_to '編集', edit_scout_path(@scout), class: "edit-btn" %>
        <%= link_to '削除', scout_path(@scout), method: :delete, class: "delete-btn" %>
      <% end %>
    </div>

</div>