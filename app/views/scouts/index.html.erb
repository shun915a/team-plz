<%= render 'shared/header' %>

<div class="btn-container">
  <div class="new-rec-button">
    <%= link_to '投稿', new_scout_path, class: "new-rec-button-text"%>
  </div>
</div>

<div class="container">

  <ul class="item-lists">
    <% @scouts.each do |scout| %>

    <li class="list">
      <%= link_to scout_path(scout) do %>

        <div class="item-title">
          <h3><%= scout.scout_title %></h3>
          <span class="category">SCOUT</span>
        </div>

      <div class="item-info">
      
        <div class="item-game-id">
          <%= scout.scout_game_id %>
        </div>

        <div class="item-text">
          <%= scout.scout_text %>
        </div>

      </div>
      <% end %>
    </li>

    <% end %>
  </ul>
</div>