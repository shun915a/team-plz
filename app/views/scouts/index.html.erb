<%= render 'shared/header' %>

<div class="btn-container">
  <%= link_to new_scout_path do %>
    <div class="new-rec-button">
      <p class="new-rec-button-text">投稿</p>
    </div>
  <% end %>
</div>

<div class="container">
  <% if user_signed_in? %>
    <%= react_component("ScoutList", {posts: @scouts, userId: current_user.id}) %>
  <% else %>
    <%= react_component("ScoutList", {posts: @scouts}) %>
  <% end %>

  <ul class="item-lists">
    <%# render partial: 'scout', collection: @scouts %>
  </ul>
</div>