<%= render 'shared/header' %>

<div class="container">
  <div class="new-main">
    <h2 class="new-item-title">編集</h2>
    <%= form_with model: @scout, local: true do |f| %>

    <div class="new-item">
      <div class="weight-bold-text">
        タイトル
      </div>
      <%= f.text_area :scout_title, class: "text-input", id: "item-title", placeholder: "募集タイトル", maxlength: "40"%>
      <div class="weight-bold-text">
        ゲームID
      </div>
      <%= f.text_area :scout_game_id, class: "text-input", id: "item-game-id", placeholder:"Cypher#0010" %>
      <div class="new-item-text">
        <div class="weight-bold-text">
          募集内容
        </div>
        <%= f.text_area :scout_text, class: "text-input text-box", id: "item-text", placeholder: "VALORANTを一緒にプレイするフレンドを探しています。活動している時間帯は平日は20:00〜23:00くらいです。", rows: "7", maxlength: "1000" %>
      </div>

      <div class="submit-btn-contents">
        <%= f.submit "UPDATE", class: "submit-btn" %>
        <%= link_to 'BACK', root_path, class: "back-btn" %>
      </div>
    </div>
    <% end %>
  </div>
</div>