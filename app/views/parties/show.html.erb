<%= render 'shared/header' %>

<div class="btn-container">
  <%= link_to new_party_path do %>
    <div class="new-rec-button">
      <p class="new-rec-button-text">投稿</p>
    </div>
  <% end %>
</div>

<div class="main-container">
  <div class="show-main">
    <h1 class="show-title">PARTY</h1>

    <div class="show-container">
      <div class="show-item">
        <p class="label-text">TITLE:</p>
        <h3><%= @party.party_title %></h3>
      </div>

      <div class="show-item">
        <p class="label-text">NAME:</p>
        <%= link_to @party.party_game_id, user_path(@party.user_id), class: "game-id" %>
      </div>

      <div class="show-item">
        <p class="label-text">TAGS:</p>
        <div class="tag-container">
          <% @party.party_tags.each do |tag| %>
            <span class='tag'><%= tag.name %></span>
          <% end %>
        </div>
      </div>

      <div class="show-item show-about-bg">
        <p class="label-text">DESCRIPTION:</p>
        <%= @party.party_text %>
      </div>
    </div>

  </div>

    <div class="show-buttons">
      <% if current_user == @party.user %>
        <%= link_to 'リクエストリスト', party_party_members_path(@party), class: "btn edit-btn" %>
        <%= link_to '編集', edit_party_path(@party), class: "btn edit-btn" %>
        <%= link_to '削除', party_path(@party), method: :delete, class: "btn delete-btn" %>
      <% end %>
    </div>

</div>