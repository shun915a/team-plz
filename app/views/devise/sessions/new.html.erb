<%= render "shared/header" %>





<%= form_with model: @user, url: new_user_session_path, class: 'login-main', local: true do |f| %>

<div class="item-contents">
  <div class="show-main">
    <div class="show-title">LOGIN</div>

    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

    <div class="show-item">
      <p class="label-text">メールアドレス</p>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"sample@email.com", autofocus: true %>
    </div>

    <div class="show-item">
      <p class="label-text">パスワード</p>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>

    <div class="login-btn-container">
      <%= f.submit "LOGIN" ,class:"login-btn" %>
    </div>

  </div>
</div>

<% end %>
