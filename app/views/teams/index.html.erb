<%= render 'shared/header' %>

<div class="btn-container">
  <%= link_to new_team_path do %>
    <%= render 'shared/new_rec_button' %>
  <% end %>
</div>

<div class="container">
  <h1 class="list-title-text">// TEAM RECRUITMENTS</h1>

  <div class="rec-title">
    <h1>TEAM</h1>
  </div>

  <div class="item-lists">
    <% if user_signed_in? %>
      <% @teams.each do |team| %>
        <%= react_component("TeamList", {post: team, tags: team.team_tags, userId: current_user.id}) %>
      <% end %>
    <% else %>
      <% @teams.each do |team| %>
        <%= react_component("TeamList", {post: team, tags: team.team_tags}) %>
      <% end %>
    <% end %>
  </div>

  <ul class="item-lists">
    <%# render partial: 'team', collection: @teams %>
  </ul>

</div>