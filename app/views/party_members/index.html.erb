<%= render 'shared/header' %>

<div class="main-container" id='root'>
  <p>参加希望者リスト</p>

  <% @requested_party_members.each do |request| %>
    <%= request.user.nickname %>
    <br>
    <%= link_to '許可', party_party_member_accept_request_path(request.party_id, request.id), method: :patch %>
    <%= link_to '拒否', party_party_member_decline_request_path(request.party_id, request.id), party_member_id: request.id, method: :patch %>
  <% end %>

</div>