<%= render 'shared/header' %>

<div class="btn-container">
  <div class="new-rec-button">
    <%= link_to '投稿', new_friend_path, class: "new-rec-button-text"%>
  </div>
</div>

<div class="container">
  <div class="show-main">

    <h1 class="show-title">FRIEND</h1>

    <div class="show-item">
      <p class="label-text">TITLE:</p>
      <h3><%= @friend.friend_title %></h3>
    </div>

    <div class="show-item">
      <p class="label-text">NAME:</p>
      <%= link_to @friend.friend_game_id, user_path(@friend.user_id) %>
    </div>

    <div class="show-item show-about-bg">
      <p class="label-text">DESCRIPTION:</p>
      <%= @friend.friend_text %>
    </div>

  </div>

    <div class="show-buttons">
      <% if current_user == @friend.user %>
        <%= link_to '編集', edit_friend_path(@friend), class: "edit-btn" %>
        <%= link_to '削除', friend_path(@friend), method: :delete, class: "delete-btn" %>
      <% end %>
    </div>

</div>